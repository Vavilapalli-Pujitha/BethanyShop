@using BethanyWorkShop.Models.ViewModels
@using BethanyWorkShop.Models
@model StudentsWithCount
<html>
    <head>
        
       <p><h1>DOT NET Batch 2</h1>
            Total Students: @Model.count
            </p> 
    </head>
    <body>
        <table class="table table-striped table-dark">
          <thead>
            <tr>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Age</th>
              <th scope="col">Team Name</th>
            </tr>
          </thead>
            <tbody>
            @foreach(var student in Model.students)
            {
                <tr>

                    <td><a asp-controller="Student" asp-action="Details" asp-route-id="@student.StudentID">@student.FirstName</a></td>
                    <td>@student.LastName</td>
                    <td>@student.Age </td>
                    <td>@student.TeamName</td>
                    <td><a asp-controller="Student" asp-action="Remove" asp-route-id="@student.StudentID">Remove</a></td>
                </tr>                  

            }  
            </tbody>
        </table>
                <a asp-action="Create">Create</a><br />
                <h1> Total students are: @Model.count</h1>

    </body>
</html>
